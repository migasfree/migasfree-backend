    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:2345",
                "--settings=migasfree.settings.development",
                "--asgi"
            ],
            "django": true
        },
        {
            "name": "Python: Celery default queue",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "console": "integratedTerminal",
            "args": [
                "--without-gossip",
                "--concurrency=10",
                "--app=migasfree.celery.app",
                "worker",
                "-Q",
                "default",
                "-B",
            ],
            "env": {
                "DJANGO_SETTINGS_MODULE": "migasfree.settings.development"
            },
        },
        {
            "name": "Python: Celery repository queue",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "console": "integratedTerminal",
            "args": [
                "--without-gossip",
                "--concurrency=10",
                "--app=migasfree.celery.app",
                "worker",
                "-Q",
                "repository",
            ],
            "env": {
                "DJANGO_SETTINGS_MODULE": "migasfree.settings.development"
            },
        }
    ]
}
