    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:2345",
                "--settings=migasfree.settings.development"
            ],
            "django": true,
            "subProcess": false
        },
        {
            "name": "Python: Celery beat",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "console": "integratedTerminal",
            "args": [
                "--app=migasfree.celery.app",
                "beat",
                "--loglevel=INFO",
            ],
            "env": {
                "DJANGO_SETTINGS_MODULE": "migasfree.settings.development"
            },
        },
        {
            "name": "Python: Celery queues",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "console": "integratedTerminal",
            "args": [
                "--app=migasfree.celery.app",
                "worker",
                "--without-gossip",
                "--concurrency=10",
                "--queues=default,pms-apt,pms-pacman,pms-yum,pms-zypper",
                "--loglevel=INFO",
            ],
            "env": {
                "DJANGO_SETTINGS_MODULE": "migasfree.settings.development"
            },
        }
    ]
}
